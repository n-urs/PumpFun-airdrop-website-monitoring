# ===== Core cadence =====
INTERVAL=1.0
HEARTBEAT=10

# ===== Startup behavior =====
NO_STARTUP_ALERTS=true
STARTUP_MUTE=10
TELEGRAM_STARTUP_NOTIFY=true

# ===== "Meaningful" positive definition =====
ONLY_WHEN_200=true
MIN_OK_LENGTH=600
CONFIRM=2
ALERT_HOMEPAGE=false

# ===== DNS / CT =====
CT_ENABLED=false
CT_AUDIO=false
DNS_AUDIO=false

# ===== Logging noise =====
QUIET_CHANGES=true
DEBUG=false

# ===== Alerts =====
ALERT_FILE=alert.mp3

# ===== Telegram (required) =====
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=        # Input your bot token
TELEGRAM_CHAT_ID=         # admin (single-recipient fallback)
TELEGRAM_ADMIN_CHAT_ID=       # admin (receives startup ping)
TELEGRAM_PARSE_MODE=Markdown        # allowed: Markdown, MarkdownV2, HTML (or blank)
TELEGRAM_SILENT=false
TELEGRAM_RETRY=3

# ===== Broadcast & subscriptions =====
TELEGRAM_BROADCAST_ALL=true
TELEGRAM_SUBSCRIBERS_FILE=subscribers.json
TELEGRAM_POLL_UPDATES=true
TELEGRAM_POLL_INTERVAL=1.2
TELEGRAM_REQUIRE_START=true         # require /start to subscribe; set false to auto-subscribe on any message
TELEGRAM_WELCOME_TEXT=âœ… Subscribed to PumpWatch alerts. Send /stop to unsubscribe.
TELEGRAM_GOODBYE_TEXT=ðŸ›‘ Unsubscribed from PumpWatch alerts. Send /start to subscribe again.


OFFLINE_GUARD=true
OFFLINE_PROBE_URLS=https://api.telegram.org, https://pump.fun/robots.txt
OFFLINE_PROBE_INTERVAL=5
OFFLINE_BACKOFF_BASE=3
OFFLINE_BACKOFF_MAX=60
OFFLINE_NOTIFY=true
OFFLINE_QUEUE_ALERTS=true

